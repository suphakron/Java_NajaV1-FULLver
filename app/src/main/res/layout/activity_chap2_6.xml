                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content2_6Body_3"
                    android:textColor="#000000" />

                <TextView
                    android:background="@color/colorCode"
                    android:id="@+id/Body98"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/content2_6pic2"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Body4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content2_6Body_4"
                    android:textColor="#000000" />

                <TextView
                    android:background="@color/colorCode"
                    android:id="@+id/Body97"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/content2_6pic3"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Body5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content2_6Body_5"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/Pic4"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
